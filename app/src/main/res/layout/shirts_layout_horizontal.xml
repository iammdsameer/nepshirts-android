<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_marginRight="10dp"
        card_view:cardElevation="10sp"
        android:elevation="2dp"
        card_view:cardCornerRadius="5dp"
        android:id="@+id/parent_layout"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"  >

            <ImageView
                android:id="@+id/shirt_image"
                android:layout_width="160dp"
                android:layout_height="158dp"
                android:src="@drawable/t1" />

            <TextView
                android:id="@+id/shirt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Visit Nepal 2020"
                android:textColor="#000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shirt_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="रु 2000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/shirt_discounted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:gravity="center"
                    android:text="रु 2000"
                    android:textSize="10sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shirt_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textSize="10sp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="2dp"
                    android:text="Programming" />

                <RatingBar
                    android:id="@+id/shirt_rating"
                    style="@android:style/Widget.Material.Light.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp"
                    android:numStars="5"
                    android:rating="4"
                    android:stepSize="0.5" />

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
