<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckOut">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:layout_margin="10sp"
        android:layout_centerHorizontal="true"
    android:id="@+id/checkout_title"
        />
    <androidx.cardview.widget.CardView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkout_title"
        android:elevation="15sp"
        android:layout_centerHorizontal="true"
        android:outlineAmbientShadowColor="@color/black"
        android:padding="30sp"
        android:layout_margin="15sp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank You For Purchasing With Us"
            android:textSize="20sp"
            android:id="@+id/thank_you_message"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@id/thank_you_message"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15sp"
            android:text="Your Order Details"
            android:id="@+id/oder_details_title"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/oder_details_title"

                android:layout_marginTop="15sp"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="5sp"
                android:id="@+id/payment_type"
                android:text="Payment Type: Cash On Delivery"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/payment_type"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="5sp"
                android:text="Shipping Address: Bafal Kathmandu"
                android:id="@+id/shipping_address"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shipping_address"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="5sp"
                android:text="Shipping Price: Rs.150"
                android:id="@+id/shipping_price_checkout"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shipping_price_checkout"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="5sp"
                android:text="Total Payble Price: Rs.150"
                android:id="@+id/payableAmount"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/payableAmount"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="50sp"
                android:text="Expected Delivery date: Rs.150"
              android:id="@+id/deliveryDate"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/deliveryDate"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="15sp"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"
                android:text="The delivery will be taken by RamSaila"
                android:id="@+id/user_name_checkout"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/user_name_checkout"
                android:src="@mipmap/logo_launcher"
                android:elevation="5sp"
              android:id="@+id/check_logo"
                android:outlineAmbientShadowColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_centerHorizontal="true"
                android:text="@string/checkout_message"
                android:width="280sp"
                android:textAlignment="center"
                android:textSize="10sp"
                android:layout_below="@id/check_logo"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>