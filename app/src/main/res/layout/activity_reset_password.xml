<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".user.LoginActivity"

    >

    <ImageView
        android:id="@+id/top_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_top_blue_circle"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_blue"
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp"
        android:scaleType="center"
        android:scaleX="0.55"
        android:scaleY="0.55"
        android:src="@drawable/login_logo"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/pormpt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_logo"
        android:textColor="@color/black"
        android:text="Reset Password"
        android:textSize="18sp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@id/email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pormpt"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:hint="Enter your email"
        android:backgroundTint="@color/lightBlue"
        android:inputType="textEmailAddress" />


    <Button
        android:id="@+id/send_btn"
        android:layout_width="120sp"
        android:layout_height="40sp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/email_input"
        android:background="@drawable/button"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="Send" />


    <ImageView
        android:id="@+id/bottom_red"
        android:layout_width="wrap_content"
        android:layout_height="157dp"


        android:layout_alignParentBottom="true"
        android:layout_marginTop="60dp"

        android:layout_marginBottom="-39dp"
        android:src="@drawable/bottom_red_circle"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="14dp"
        android:onClick="login_page"
        android:text="@string/login_label"
        android:textSize="25sp"

        />
</RelativeLayout>
