<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_result_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    app:cardElevation="10sp"
    android:onClick="viewProduct"
    android:layout_centerHorizontal="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView

            android:id="@+id/search_result_image"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_marginRight="10sp"
            android:src="@drawable/t1" />

        <TextView
            android:id="@+id/search_result_item_title"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_toRightOf="@+id/search_result_image"
            android:text="Routine of Nepal Banda"
            android:textColor="#000" />

        <TextView
            android:id="@+id/search_result_item_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_result_item_title"
            android:layout_toRightOf="@+id/search_result_image"

            android:text="Category"
            android:textSize="11sp" />
        <TextView
            android:id="@+id/search_result_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_result_item_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="10sp"
            android:layout_toRightOf="@id/search_result_image"
            android:text="Rs .2000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/search_result_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_result_item_title"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/search_result_image"
            android:textSize="17sp"
            android:text="Rs .1500" />

        <TextView
            android:id="@+id/discount_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_result_item_title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="6dp"
            android:background="@color/lightBlue"
            android:padding="2sp"
            android:shadowColor="@color/lightGrey"
            android:text="25% Discount"
            android:textColor="@color/white" />

        <com.like.LikeButton
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            app:icon_type="heart"
            app:icon_size="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:id="@+id/star_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
